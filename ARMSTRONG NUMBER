###TO CHECK IF A NUMBER IS AN ARMSTRONG NUMBER
def armstrong(number):
    a = str(number)
    e = number
    b = len(a)
    count = 0
    for i in range(0, b):
        c = number % 10
        number = number / 10
        d = c ** b
        count = count + d
    if count == e:
        print "Yes this is an armstrong number"
    else:
        print "its not an armstrong number"



##ARMSTRONG SERIES
def armstrong(range_for_num):
    for x in range(0, range_for_num):
        a = str(x)
        e = x
        b = len(a)
        count = 0
        for i in range(0, b):
            c = x % 10
            x = x / 10
            d = c ** b
            count = count + d
            if count == e and i == b - 1:
                print count
            else:
                continue
